<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/d15"
        android:paddingBottom="@dimen/d15"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/em_black_100"
            android:textSize="@dimen/d20"
            android:maxLines="1"
            android:ellipsize="end"/>

        <View
            android:id="@+id/item_view_underline1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/d10"
            android:background="@color/em_black_54" />

    </LinearLayout>

</LinearLayout>