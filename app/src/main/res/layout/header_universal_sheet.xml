<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/d20"
            android:paddingBottom="@dimen/d15"
            android:visibility="visible">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/d15"
                android:paddingRight="@dimen/d15"
                android:src="@drawable/ic_mdi_close_new1" />

            <TextView
                android:id="@+id/title_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d5"
                android:layout_marginRight="@dimen/d5"
                android:layout_toRightOf="@+id/close"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="title"
                android:textColor="@color/em_black_100"
                android:textSize="@dimen/d20"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DAE0E4" />

    </LinearLayout>

</LinearLayout>